generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model BlogMetadata {
  id   String @id
  view Int    @default(0)
}

model ContactFormSubmission {
  id              Int      @id @default(autoincrement())
  name            String
  email           String?
  subject         String?
  message         String   @db.LongText
  showInGuestBook Boolean  @default(false)
  submittedAt     DateTime @default(now())

  @@index(fields: [showInGuestBook, submittedAt(sort: Desc)])
}
