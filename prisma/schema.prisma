generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins", "nativeDistinct", "omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogMetadata {
  id   String @id
  view Int    @default(0)

  @@map("blog_metadata")
}

model ContactFormSubmission {
  id              Int      @id @default(autoincrement())
  name            String
  email           String?
  subject         String?
  message         String
  showInGuestbook Boolean  @default(false) @map("show_in_guestbook")
  submittedAt     DateTime @default(now()) @map("submitted_at")

  @@index([showInGuestbook(sort: Desc), submittedAt(sort: Desc)])
  @@map("contact_form_submission")
}
