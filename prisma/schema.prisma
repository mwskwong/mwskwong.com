generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model BlogMetadata {
  id    String     @id
  view  Int        @default(0)
  likes BlogLike[]
}

model BlogLike {
  blogId       String
  userId       String
  blogMetadata BlogMetadata @relation(fields: [userId], references: [id])

  @@id([blogId, userId])
}

model ContactFormSubmission {
  id              Int      @id @default(autoincrement())
  name            String
  email           String?
  subject         String?
  message         String   @db.Text
  showInGuestbook Boolean  @default(false)
  submittedAt     DateTime @default(now())

  @@index(fields: [showInGuestbook, submittedAt(sort: Desc)])
}
